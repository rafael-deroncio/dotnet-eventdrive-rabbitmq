{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "CorsSettings": {
    "Policy": {
      "Name": "api-certificate-policy",
      "AllowedOrigins": [
        "*"
      ],
      "AllowedMethods": [
        "GET",
        "POST",
        "PUT",
        "DELETE"
      ],
      "AllowedHeaders": [
        "Authorization",
        "Content-Type"
      ]
    }
  },
  "VersioningSettings": {
    "ApiVersion": {
      "High": 1,
      "Medium": 0
    },
    "Reader": "x-api-version",
    "Explorer": {
      "Format": "'v'VVV"
    }
  },
  "SwaggerSettings": {
    "Name": "v1",
    "Title": "AthenasAcademy - API Certificate Manager",
    "Version": "1.0",
    "Description": "API to manage processes related to the context of certificates of courses.",
    "Contact": {
      "Name": "Develover Team",
      "Email": "dev@athenasacademy.com",
      "Url": "https://www.dev.athenasacademy.com"
    }
  },
  "SwaggerJwtBearerSettings": {
    "Name": "Authorization",
    "Scheme": "Bearer",
    "BearerFormat": "JWT",
    "Description": "Athentication Header JWT - Schema Bearer.\r\n\r\nInform 'Bearer <token>'.\r\n\r\n"
  },
  "JWTSettings": {
    "ValidateIssuerSigningKey": true,
    "ValidateIssuer": false,
    "ValidateAudience": false,
    "RequireHttpsMetadata": false,
    "SaveToken": true
  }
}